@model CashJobSite.Web.Models.HomePageViewModel

<div class="jumbotron text-center">
    <div class="container">
        <div class="col-lg-12 col-sm-12">
            <h1>Cash JobSite</h1>
            <p>Not on your tax return!</p>
            @Html.ActionLink("Post A Job", "Post", "Job", null, new { @class = "btn btn-lg btn-success" })
        </div>
    </div>
</div>

<div class="container">
    <div class="row">

        <div class="col-lg-12">
            <h2>Search</h2>

            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-inline" }))
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.SearchForm.Title)
                    @Html.TextBoxFor(x => x.SearchForm.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.SearchForm.Cash)
                    @Html.TextBoxFor(x => x.SearchForm.Cash, new { @class = "form-control" })
                </div>

                <input type="submit" class="btn btn-success" value="Search" />
            }
            <hr />
        </div>
    </div>
    <div class="row">
        @foreach (var job in Model.Jobs)
            {
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="well">
                    <h2>@Html.ActionLink(job.Title, "Index", "Job", new { id = job.Id }, null)</h2>
                    <h4>£@job.Cash</h4>
                    <p>@job.Description</p>

                    <hr />

                    @Html.ActionLink("Apply", "Apply", "Job", new { id = job.Id }, new { @class = "btn btn-sm btn-success" })
                    @Html.ActionLink("Report", "Report", "Job", new { id = job.Id }, new { @class = "btn btn-sm btn-danger" })
                </div>
            </div>
        }
    </div>
</div>
